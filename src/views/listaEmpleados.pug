    script.
      const areas = !{JSON.stringify(areas || [])};
      const roles = !{JSON.stringify(roles || [])};
      let empleadoEditando = null;
      
      function mostrarAlerta(mensaje, tipo = 'success') {
        const alert = document.getElementById('alert');
        alert.className = `alert alert-${tipo}`;
        alert.textContent = mensaje;
        alert.style.display = 'block';
        setTimeout(() => {
          alert.style.display = 'none';
        }, 5000);
      }
      
      function mostrarAlertaModal(mensaje, tipo = 'success') {
        const alert = document.getElementById('alertModal');
        alert.className = `alert alert-${tipo}`;
        alert.textContent = mensaje;
        alert.style.display = 'block';
        setTimeout(() => {
          alert.style.display = 'none';
        }, 5000);
      }
      
      function abrirModalAgregar() {
        empleadoEditando = null;
        document.getElementById('modalTitulo').textContent = 'Agregar Empleado';
        document.getElementById('formEmpleado').reset();
        document.getElementById('empleadoId').value = '';
        document.getElementById('alertModal').style.display = 'none';
        document.getElementById('modalEmpleado').style.display = 'block';
      }
      
      function cerrarModal() {
        document.getElementById('modalEmpleado').style.display = 'none';
        document.getElementById('formEmpleado').reset();
        empleadoEditando = null;
      }
      
      async function editarEmpleado(id) {
        try {
          const response = await fetch(`/empleados/${id}`);
          const empleado = await response.json();
          
          empleadoEditando = id;
          document.getElementById('modalTitulo').textContent = 'Editar Empleado';
          document.getElementById('empleadoId').value = empleado._id;
          document.getElementById('nombre').value = empleado.nombre || '';
          document.getElementById('dni').value = empleado.dni || '';
          document.getElementById('email').value = empleado.email || '';
          document.getElementById('telefono').value = empleado.telefono || '';
          document.getElementById('areaId').value = empleado.areaId || '';
          document.getElementById('rolId').value = empleado.rolId || '';
          document.getElementById('alertModal').style.display = 'none';
          document.getElementById('modalEmpleado').style.display = 'block';
        } catch (error) {
          mostrarAlerta('Error al cargar el empleado', 'error');
        }
      }
      
      async function eliminarEmpleado(id, nombre) {
        if (!confirm(`Â¿EstÃ¡s seguro de que deseas eliminar a ${nombre}?`)) {
          return;
        }
        
        try {
          const response = await fetch(`/empleados/${id}`, {
            method: 'DELETE'
          });
          
          if (response.ok) {
            mostrarAlerta('Empleado eliminado correctamente', 'success');
            setTimeout(() => location.reload(), 1000);
          } else {
            const error = await response.json();
            mostrarAlerta(error.mensaje || error.error || 'Error al eliminar empleado', 'error');
          }
        } catch (error) {
          mostrarAlerta('Error al eliminar empleado', 'error');
        }
      }
      
      document.getElementById('formEmpleado').addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(e.target);
        const dni = formData.get('dni');
        
        // Validar formato de DNI (exactamente 8 dÃ­gitos numÃ©ricos)
        if (!/^\d{8}$/.test(dni)) {
          mostrarAlertaModal('El DNI debe ser exactamente 8 dÃ­gitos numÃ©ricos', 'error');
          return;
        }
        
        const data = {
          nombre: formData.get('nombre'),
          dni: dni,
          email: formData.get('email') || undefined,
          telefono: formData.get('telefono') || undefined,
          areaId: parseInt(formData.get('areaId')),
          rolId: parseInt(formData.get('rolId'))
        };
        
        const id = formData.get('id');
        const url = id ? `/empleados/${id}` : '/empleados';
        const method = id ? 'PUT' : 'POST';
        
        try {
          const response = await fetch(url, {
            method: method,
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
          });
          
          const result = await response.json();
          
          if (response.ok) {
            mostrarAlertaModal(id ? 'Empleado actualizado correctamente' : 'Empleado creado correctamente', 'success');
            setTimeout(() => {
              cerrarModal();
              location.reload();
            }, 1500);
          } else {
            mostrarAlertaModal(result.mensaje || result.error || 'Error al guardar empleado', 'error');
          }
        } catch (error) {
          mostrarAlertaModal('Error al guardar empleado', 'error');
        }
      });
      
      window.onclick = function(event) {
        const modal = document.getElementById('modalEmpleado');
        if (event.target === modal) {
          cerrarModal();
        }
      }
